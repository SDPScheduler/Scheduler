<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.ac.aut.sdp.scheduler" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewEvent"
            android:label="@string/title_activity_new_event"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.aut.sdp.scheduler.MainActivity" />
        </activity>
        <activity
            android:name=".DayView"
            android:label="@string/title_activity_day_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.aut.sdp.scheduler.MainActivity" />
        </activity>
        <activity
            android:name=".WeekView"
            android:label="@string/title_activity_week_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.aut.sdp.scheduler.MainActivity" />
        </activity>
        <activity
            android:name=".MonthView"
            android:label="@string/title_activity_month_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.aut.sdp.scheduler.MainActivity" />
        </activity>
    </application>

</manifest>
